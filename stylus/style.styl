@import 'colors'
@import 'typography'
@import 'buttons'

input[type='checkbox']:focus 
  outline none

html 
  color #41596b
  font-family 'Open Sans', sans-serif
  background #f6f6f6 url("/img/gradient-blue.png") 0 0 repeat-x

html * 
  max-width 100%

body 
  margin 0

ul,
nav 
  list-style none

.navbar-nav a 
  padding 12px
  text-transform uppercase

.header-nav li 
  display inline-block

a 
  color #41596b
  font-size 0.8125rem
  text-decoration none
  &:hover 
    text-decoration underline

.badge 
  background-color #41596b
  border-radius 10px
  color #fff
  display inline-block
  font-size 0.75rem
  font-weight 400
  line-height 1
  min-width 10px
  padding 2px 5px 3px 4px
  text-align center
  text-shadow none
  vertical-align middle
  white-space nowrap

.container-fluid 
  padding-left 15px
  padding-right 15px
  margin-right auto
  margin-left auto

.filters ul 
  margin auto
  padding 0
  padding-left 9.5%

.filters li
  min-width 114px
  width 50%
  padding 0
  text-transform: capitalize

.filters-mobile 
  display none

.label 
  color #fff
  display inline-block
  border-radius 5px
  margin-bottom 2px
  margin-right 2px
  padding 1px 5px
  font-size 12px
  text-shadow 1px 1px 0 rgba(0,0,0,0.5)

.main 
  margin auto
  max-width 940px

.navbar-nav a:hover
  cursor: pointer

.page-title,
.page-title-sm 
  padding-left 3rem

.panel 
  word-wrap break-word

.repo-header:hover 
  cursor pointer

.sidebar .navbar-nav
  border-bottom 1px dotted rgba(65,89,107,0.15)

.user-avatar 
  max-width 100%

@import 'media-queries/media-queries'